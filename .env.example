# Asterisk AMI Configuration
ASTERISK_AMI_HOST=host.docker.internal
ASTERISK_AMI_PORT=5038
ASTERISK_AMI_USERNAME=admin
ASTERISK_AMI_PASSWORD=amp111

# API Security
API_KEY=your-secure-api-key-here
DEV_API_KEY=dev-api-key-here

# Mock Configuration
MOCK_TIMEOUT_MINUTES=5

# Server Configuration
HOST=0.0.0.0
PORT=8000
HTTP_PORT=8000
HTTPS_PORT=8443

# SSL Configuration
# For Docker: use /app/certs/key.pem and /app/certs/cert.pem
# For direct Python execution: use certs/key.pem and certs/cert.pem
SSL_KEYFILE=certs/key.pem
SSL_CERTFILE=certs/cert.pem

